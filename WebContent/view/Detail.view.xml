			<u:CalendarDateInterval 
				id="calendar" 
				days="9"
				width="100%" 
				select="handleCalendarSelect"
				pickerPopup="true" />
			<l:VerticalLayout
				id = "selectField">
				<Label text="Tipo commessa:" labelFor="selectOrder" required = "true"/>
				<Select
						id="selectOrder"
						forceSelection="false"
						change="handleSelectChange"
						items="{ path : '/items'}">
					<core:Item key="{id}" text="name : {title}"/>
				</Select>
			</l:VerticalLayout>
			<l:VerticalLayout
				id="dateStart">
				<Label text="Inizio: " labelFor="startDate"/>
				<DateTimePicker
						id="startDate"
						displayFormat="short"
						required="true"
						change="handleDateInput"/>
			</l:VerticalLayout>
			<l:VerticalLayout
				id="dateEnd">
				<Label text="Fine: " labelFor="endDate"/>
				<DateTimePicker
						id="endDate"
						displayFormat="short"
						required="true"
						change="handleDateInput"/>
			</l:VerticalLayout>
			<l:VerticalLayout>
				<Button
						id="saveButton"
						text = "Salva"
						press = "handleSaveButton">
				</Button>
			</l:VerticalLayout>
			<Table
				id="orderTable"
				fixedLayout= "true"
				items="{ path : '/user/appointment'}">
				<headerToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text= "Commessa"/>
					</Column>
					<Column>
						<Text text= "Fornitore"/>
					</Column>
					<Column>
						<Text text= "Ore"/>
					</Column>
					<Column>
						<Text text= "Azioni"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title= "{order}"
								text = "{idOrder}"
							/>
							<Text text ="{supplier}"/>
							<Text text="{hours}"/>
							<Text text="{actions}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
