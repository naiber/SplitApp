<core:View xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	controllerName="sap.ui.SplitApp.view.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="{ path : '/menu'}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButton">
		<content>
			<u:CalendarDateInterval 
				id="calendar" 
				days="9"
				width="100%" 
				select="handleCalendarSelect"
				pickerPopup="true" />
				<l:VerticalLayout
					id = "selectField">
				<Label text="Tipo commessa:" labelFor="commessa" required = "true"/>
				<Select
					id="commessa"
					forceSelection="false"
					change="selectCommessaCreate"
					items="{commesse>/}">
					<core:Item key="{commesse>Id}" text="{commesse>Name}"/>
				</Select>
			</l:VerticalLayout>
			<l:VerticalLayout
				id="editSupplier">
			<Label text="Fornitore" labelFor="fornitore" required = "true"/>
				<Select
					id="fornitore"
					forceSelection = "false"
					change = "selectFornitoreCreate"
					items = "{fornitori>/}">
					<core:Item key="{fornitori>Id}" text="{fornitori>Name}"/>
				</Select>
			</l:VerticalLayout>
			<l:VerticalLayout
				id="dateStart">
				<Label text="Inizio: " labelFor="startDate"/>
				<DateTimePicker
						id="startDate"
						displayFormat="short"
						required="true"
						change="handleDateInput"/>
			</l:VerticalLayout>
			<l:VerticalLayout
				id="dateEnd">
				<Label text="Fine: " labelFor="endDate"/>
				<DateTimePicker
						id="endDate"
						displayFormat="short"
						required="true"
						change="handleDateInput"/>
			</l:VerticalLayout>
			<l:VerticalLayout>
				<Button
						id="saveButton"
						enabled = "false"
						text = "Salva"
						press = "handleSaveButton">
				</Button>
			</l:VerticalLayout>
			<Table
				id="orderTable"
				fixedLayout= "true"
				items="{path : '/orders'}">
				<headerToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text= "Commessa"/>
					</Column>
					<Column>
						<Text text= "Fornitore"/>
					</Column>
					<Column>
						<Text text= "Ore"/>
					</Column>
					<Column
						id="actions1"
						styleClass="icon1">
						<Text text= "Azioni"/>
					</Column>
					<Column
						id="actions2"
						styleClass="icon2"></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title= "{order}"
								text = "{idOrder}"
								press="deleteItem"
							/>
							<Text text ="{supplier}"/>
							<Text text="{hours}"/>
							<Button
								id="editIcon"
								icon="{actions1}"
								press="editItem">
							</Button>
							<Button
								id="deleteIcon"
								icon="{actions2}"
								press="deleteItem">
							</Button>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</core:View>